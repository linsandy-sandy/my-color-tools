    <script>
        // 初始化 Icons
        lucide.createIcons();

        // 頁面載入時檢查 Key
        window.onload = () => {
            const savedKey = localStorage.getItem('my_gemini_key');
            if (savedKey) {
                document.getElementById('globalApiKey').value = savedKey;
                showStatus('✅ 魔法鑰匙已就位，可以開始探索了！', 'text-green-500');
            }
        };

        // 儲存 Key
        function saveGlobalKey() {
            const key = document.getElementById('globalApiKey').value.trim();
            if (key) {
                localStorage.setItem('my_gemini_key', key);
                showStatus('✨ 儲存成功！全站工具皆可使用此金鑰。', 'text-blue-500');
                
                // 簡單的按鈕動畫反饋
                const btn = document.querySelector('button');
                const originalContent = btn.innerHTML;
                btn.innerHTML = '<i data-lucide="check" class="w-4 h-4"></i>';
                lucide.createIcons();
                setTimeout(() => {
                    btn.innerHTML = originalContent;
                    lucide.createIcons();
                }, 2000);
            } else {
                showStatus('⚠️ 請輸入有效的 API Key', 'text-red-400');
            }
        }

        function showStatus(msg, colorClass) {
            const el = document.getElementById('keyStatus');
            el.textContent = msg;
            el.className = `mt-2 text-xs font-medium h-4 transition-all ${colorClass}`;
        }
    </script>
